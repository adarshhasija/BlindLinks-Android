<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.ngotransactionrecords"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="18" />
    
    <uses-permission android:name="android.permission.INTERNET" />
	<uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
	<uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

    <application
        android:name="com.adarshhasija.blindlinks.MainApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <meta-data android:name="android.app.default_searchable"
            android:value=".SearchResultsListActivity" />
        <activity
            android:name="com.adarshhasija.blindlinks.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.adarshhasija.blindlinks.Login"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.adarshhasija.blindlinks.Signup"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.adarshhasija.blindlinks.BankDetails"
            android:label="@string/bank_details" >
        </activity>
        <activity
            android:name="com.adarshhasija.blindlinks.RecordListActivity"
            android:label="@string/app_name"
            android:configChanges="orientation"
    		android:screenOrientation="portrait" >
            <meta-data android:name="android.app.searchable"
                   android:value=".SearchResultListActivity" />
        </activity>
        <activity
            android:name="com.adarshhasija.blindlinks.RecordDetailActivity"
            android:label="@string/title_record_detail"
            android:parentActivityName="com.adarshhasija.blindlinks.RecordListActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".RecordListActivity" />
        </activity>
        <activity
            android:name="com.adarshhasija.blindlinks.SearchResultsListActivity"
            android:label="@string/search_results"
            android:parentActivityName="com.adarshhasija.blindlinks.RecordListActivity" >
            <intent-filter>
        		<action android:name="android.intent.action.SEARCH" />
    		</intent-filter>
    		<meta-data android:name="android.app.searchable"
                   android:resource="@xml/searchable"/>
        </activity>
        <activity
            android:name="com.adarshhasija.blindlinks.RecordEditActivity"
            android:label="@string/new_record" 
            android:windowSoftInputMode="stateVisible" >
        </activity>
        <activity
            android:name="com.adarshhasija.blindlinks.Archives"
            android:label="@string/archives" >
        </activity>
    </application>

</manifest>
